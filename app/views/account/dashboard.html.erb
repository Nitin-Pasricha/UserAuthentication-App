<div class='dashboard'>
<section class='side-bar'>
<div class='profile'>
<% if @user.profile_pic.attached? %>
<%= image_tag @user.profile_pic, width:100 %>
<% else %>
<%= image_tag "avatar.png", width:100 %>
<% end %>
<div class='info'>
<h3 style="letter-spacing:0.1rem"><%= @user.first_name %> <%= @user.last_name %></h3>
<p><%= @user.email %></p>
</div>
</div>
<div class='tabs'>
<%= link_to "Edit Profile", profile_edit_profile_path, class:'btn'%>
<%= link_to "Reset password", reset_password_path, class:'btn'%>
<%= link_to "Logout", logout_path, class:'btn'%>
</div>
</section>
<div class='header'>
    <h1 style="font-size:5rem">🙋🏻‍♂️</h1>
    <h1>Hello, <%= @user.first_name %><h1>
    <h2> Welcome aboard!</h2>
</div>
</div>